                }
              },
              "example": {
                "name": "Kategori Baru",
                "description": "Deskripsi Kategori"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "example": {
                  "data": {
                    "id": 5,
                    "name": "Kategori Baru",
                    "description": "Deskripsi Kategori"
                  },
                  "message": "Category created successfully",
                  "success": true
                }
              }
            }
          }
        }
      },
      "get": {
