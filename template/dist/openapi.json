          "Category"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "example": {
                  "data": [
                    {
                      "id": 1,
                      "name": "Elektronik",
                      "description": "Barang elektronik"
                    },
                    {
                      "id": 2,
                      "name": "Pakaian",
                      "description": "Baju dan celana"
                    }
                  ],
                  "message": "Categories retrieved successfully",
                  "success": true
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/categories/1": {
      "get": {
        "summary": "Get Category Detail",
        "description": "Detail kategori.",
        "tags": [
          "Category"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "example": {
                  "data": {
                    "id": 1,
                    "name": "Elektronik",
                    "description": "Barang elektronik"
                  },
                  "message": "Category detail retrieved successfully",
                  "success": true
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update Category",
        "description": "Update kategori.",
        "tags": [
          "Category"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "description": { "type": "string" }
                }
              },
              "example": {
                "name": "Elektronik Murah",
                "description": "Barang elektronik diskon"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "example": {
                  "data": {
                    "id": 1,
                    "name": "Elektronik Murah",
                    "description": "Barang elektronik diskon"
                  },
                  "message": "Category updated successfully",
                  "success": true
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete Category",
        "description": "Hapus kategori.",
        "tags": [
          "Category"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "example": {
                  "data": null,
                  "message": "Category deleted successfully",
                  "success": true
                }
              }
            }
          }
        }
      }
    }
  }
}