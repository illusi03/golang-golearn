{
  "openapi": "3.0.0",
  "info": {
    "title": "GoLearn API",
    "version": "1.0.0",
    "description": "Dokumentasi API untuk aplikasi GoLearn dengan standar response wrapper."
  },
  "servers": [
    {
      "url": "https://golearn2.azhari.my.id",
      "description": "Development Server"
    }
  ],
  "paths": {
    "/api/v1/products": {
      "post": {
        "summary": "Create New Product",
        "description": "Membuat data produk baru.",
        "tags": [
          "Product"
        ],
        "requestBody": {
          "description": "Payload produk",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "price": { "type": "integer" },
                  "description": { "type": "string" }
                }
              },
              "example": {
                "name": "Produk Satu",
                "price": 2500,
                "description": "Testing Product Satu2"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "example": {
                  "data": {
                    "id": 3,
                    "name": "Produk Satu",
                    "description": "Testing Product Satu2",
                    "price": 2500
                  },
                  "message": "Product created successfully",
                  "success": true
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Get Product List",
        "description": "Mengambil semua data produk.",
        "tags": [
          "Product"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "example": {
                  "data": [
                    {
                      "id": 1,
                      "name": "Produk Satu",
                      "description": "Deskripsi satu",
                      "price": 2500
                    },
                    {
                      "id": 2,
                      "name": "Produk Dua",
                      "description": "Deskripsi dua",
                      "price": 5000
                    }
                  ],
                  "message": "Products retrieved successfully",
                  "success": true
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/products/1": {
      "get": {
        "summary": "Get Product Detail",
        "description": "Mengambil detail satu produk.",
        "tags": [
          "Product"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "example": {
                  "data": {
                    "id": 1,
                    "name": "Produk Satu",
                    "description": "Testing Product Satu2",
                    "price": 2500
                  },
                  "message": "Product detail retrieved successfully",
                  "success": true
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update Product",
        "description": "Update data produk.",
        "tags": [
          "Product"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "price": { "type": "integer" },
                  "description": { "type": "string" }
                }
              },
              "example": {
                "name": "Produk Dua Ubah",
                "price": 3000,
                "description": "Deskripsi Update"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "example": {
                  "data": {
                    "id": 1,
                    "name": "Produk Dua Ubah",
                    "description": "Deskripsi Update",
                    "price": 3000
                  },
                  "message": "Product updated successfully",
                  "success": true
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete Product",
        "description": "Hapus data produk.",
        "tags": [
          "Product"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "example": {
                  "data": null,
                  "message": "Product deleted successfully",
                  "success": true
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/categories": {
      "post": {
        "summary": "Create Category",
        "description": "Buat kategori baru.",
        "tags": [
          "Category"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
